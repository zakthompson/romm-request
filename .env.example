# Server
PORT=3000
BASE_PATH=/
APP_URL=http://localhost:3000

# Database
DATABASE_PATH=./data/romm-request.db

# OIDC/OAuth2 (Authentik)
OIDC_ISSUER_URL=https://auth.example.com/application/o/romm-request/
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
# Must include BASE_PATH if set (e.g. http://example.com/requests/api/auth/callback)
OIDC_REDIRECT_URI=http://localhost:3000/api/auth/callback
OIDC_ADMIN_GROUP=romm-admin

# Session
SESSION_SECRET=change-me-to-a-random-string-at-least-32-chars
SESSION_SALT=change-me-16-chr

# Development only (never enable in production)
# DEV_AUTH=true

# IGDB (Twitch)
IGDB_CLIENT_ID=
IGDB_CLIENT_SECRET=

# SMTP (Email â€” optional, notifications disabled when SMTP_HOST is unset)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@example.com
ADMIN_EMAIL=admin@example.com
