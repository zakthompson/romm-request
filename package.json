{
  "name": "romm-request",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n server,client -c blue,green \"pnpm --filter server dev\" \"pnpm --filter client dev\"",
    "build": "pnpm --filter shared build && pnpm --filter client build && pnpm --filter server build",
    "start": "pnpm --filter server start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm --filter shared build && pnpm --filter client exec tsc --noEmit && pnpm --filter server exec tsc --noEmit",
    "check": "pnpm lint && pnpm format:check && pnpm typecheck",
    "db:migrate": "pnpm --filter server db:migrate",
    "db:studio": "pnpm --filter server db:studio",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.55.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --max-warnings=0",
      "prettier --check"
    ],
    "*.{json,md,css,yaml,yml,html}": [
      "prettier --check"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.27.0"
}
